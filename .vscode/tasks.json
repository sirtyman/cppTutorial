{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: cl.exe compile active file",
			"command": "cl.exe",
			"args": [
				"/Zi", "/EHsc", "/Fe:",
				"${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"problemMatcher": ["$msCompile"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},

		{
			"type": "shell",
			"label": "C/C++: cl.exe compile subproject",
			"command": "cl.exe",
			"args": [
				"/Zi", "/EHsc", "/Fe:",
				"${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
				"${fileDirname}\\source\\*.cpp", "${file}"
			],
			"problemMatcher": ["$msCompile"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}